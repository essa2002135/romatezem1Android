<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="385dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hoinfotextbox" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignEnd="@+id/imageView24"
        android:layout_alignRight="@+id/imageView24"
        android:layout_marginEnd="25dp"
android:scaleType="fitXY"
        android:layout_marginRight="0dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/medical" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_toStartOf="@+id/imageView25"
        android:layout_toLeftOf="@+id/imageView25"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/imageView25"
        android:layout_toLeftOf="@+id/imageView25"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView23"
        android:layout_toStartOf="@+id/imageView25"
        android:layout_toLeftOf="@+id/imageView25"
        android:text="TextView" />



</RelativeLayout>